// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

// Creating a modal
// Creating Migration with prisma : "yarn prisma migrate dev"
model User {
    id         String @id @default(uuid()) // define primary key
    name       String
    github_id  Int
    avatar_url String
    login      String

    @@map("users")
}
